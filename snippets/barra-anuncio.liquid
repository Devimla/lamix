<div class="barra-de-anuncio">
    <div class="container1"> <!-- Adicione a classe "large" para dispositivos maiores -->
        <div class="barra-de-anuncio__inner">
            <p class="barra-de-anuncio__content barra-de-anuncio__content--left small">              
                <!-- Seu conteúdo aqui -->
            </p>
            <p class="barra-de-anuncio__content barra-de-anuncio__content--right mobhide">
                <!-- Seu conteúdo aqui -->
            </p>
            <p class="barra-de-anuncio__content barra-de-anuncio__content--right mobhide">
                <!-- Seu conteúdo aqui -->
            </p>
        </div>
    </div>
</div>

<style>
    .barra-de-anuncio {
        color: #ffffff;
        font-size: 13px;
        text-align: center;
        font-family: Proxima Nova,-apple-system,Helvetica Neue,Helvetica,Roboto,Arial,sans-s;
        background: linear-gradient(to right, black, #007bff);
        background-size: 170% 60%;
        color: #ffffff;
    }

    .container1 {
        max-width: 1480px;
        margin-left: auto;
        margin-right: auto;
        padding: 0;
        -moz-transform: translateX(50%);
        -webkit-transform: translateX(50%);
        transform: translateX(50%);
        padding-top: 1px;
        padding-bottom: 1px;
    }

    /* Animação padrão para tela maior (PC) */
    .container1.large {
        animation: bouncing-text-large 30s linear infinite alternate;
    }

    /* Animação diferente para tela menor (Celular) */
    @media only screen and (max-width: 600px) {
        .container1.large {
            animation: none; /* Desativa a animação para dispositivos menores */
        }
        .container1.small {
            animation: bouncing-text-small 1s linear infinite alternate;
        }
    }

    /* Definição das animações */
    @keyframes bouncing-text-large {
        0% {
            transform: translateX(60%);
        }
        100% {
            transform: translateX(-60%);
        }
    }

    @keyframes bouncing-text-small {
        0% {
            transform: translateX(60%);
        }
        100% {
            transform: translateX(-60%);
        }
    }

    .barra-de-anuncio__inner {
        display: flex;
        align-items: center;
        justify-content: space-around;
        width: 100%;
        margin-top: -2px;
        padding-bottom: 2px;
    }

    .barra-de-anuncio__content {
        display: block;
        padding: 5px 0;
        margin-bottom: -5px;
    }

    .announcesvg {
        width: 22px;
        vertical-align: middle;
        display: inline-block;
        margin-right: 10px;
    }

    @media only screen and (max-width: 999px) {
        .mobhide {
            display: none !important;
        }
    }
</style>
